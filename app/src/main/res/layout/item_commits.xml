<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#344582"
    android:foreground="?selectableItemBackground"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/commit_img"
        android:background="@color/ketchup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:src="@drawable/node" />

    <TextView
        android:id="@+id/commit_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dosis"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_weight="1"
        android:textColor="@color/chiclete"
        android:textSize="20dp"
        tools:text="feat: update theme #3" />



    <TextView
        android:id="@+id/commit_hash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:fontFamily="@font/dosis"
        android:textColor="@color/gelo"
        android:textSize="15dp"
        android:layout_marginRight="5dp"
        tools:text="as2dcde3" />
</LinearLayout>



