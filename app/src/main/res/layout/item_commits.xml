<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.5dp"
    app:cardCornerRadius="10dp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#344582"
        android:foreground="?selectableItemBackground"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/commit_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/node" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/commit_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/dosis"
            android:singleLine="true"
            android:textColor="@color/chiclete"
            android:textSize="20dp"
            tools:text="feat: update theme #3" />


        <TextView
            android:id="@+id/commit_hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/dosis"
            android:gravity="right"
            android:maxLength="8"
            android:singleLine="true"
            android:textColor="@color/gelo"
            android:textSize="15dp"
            tools:text="as2dcde3" />
    </LinearLayout>


</androidx.cardview.widget.CardView>